<div class="row">

    <div class="col-md-2">

        <div class="card mb-4 text-center">
          <div class="card-header">
            <h5 class="card-title"><%= person.name %></h5>
          </div>

          <% if person.avatar.present? %>
            <%= image_tag person.avatar.url, class: "card-img-top rounded-circle", style: "width: 100px; height: 100px; object-fit: cover; margin: auto; margin-top: 10px;" %>
          <% else %>
            <%= image_tag "default_avatar.png", class: "card-img-top rounded-circle", style: "width: 100px; height: 100px; object-fit: cover; margin: auto; margin-top: 10px;" %>
          <% end %>

          <div class="card-body">
            <p class="card-text"><strong>Email:</strong> <%= person.email %></p>
          </div>

          <div class="card-footer text-muted">
            <small>Created at: <%= person.created_at.strftime("%Y-%m-%d") %></small>
          </div>
        </div>

    </div>

</div>
