<div class="comment">
  <div class="comment-avatar">
    <%= image_tag comment.person.avatar.url, alt: "Avatar" %>
  </div>
  <div class="comment-info">
    <strong><%= comment.person.name %></strong>
    <span class="comment-date"><%= comment.created_at.strftime('%Y-%m-%d %H:%M:%S') %></span>
    <p><%= comment.content %></p>
  </div>
</div>

